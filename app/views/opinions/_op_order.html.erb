<div class='bg-white w-75 border rounded-border p-3 my-4 color-light-grey'>
<h2 class='text-blue-bold py-3 borderb-grey'><%= center_title %> </h2>
<div class='d-flex flex-column'>
<% @opinions.each do |op| %>
    <div class='d-flex my-2'>
    <%= linked_unlinked_comment(op) %>
    <div class='d-flex flex-column w-100'>
    <div class='d-flex justify-content-between'>
    <span class='font-weight-bold text-dark'>
    <%= op.user.user.username %>
    </span>
    <div class='mx-2'>
    <%= edit_destroy_retweet(op) %>
    </div>
    </div>
    <span><%= op.text %></span>
    <span class='copied-op'><%= copied_info(op) %></span>
    </div>
    </div>
  <% end %> 
</div>
</div>
