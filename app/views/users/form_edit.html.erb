<%= form_with(model: user, local:true) do |form| %>

    <%= form.label :full_name, 'Full Name *', :class => 'form-label' %>
    <%= form.text_field :full_name, :class => 'form-text', placeholder: 'Fullname here...', autofocus: true %>
    <% user.errors.messages[:full_name].each do |message| %>
        <div class='error-sm'><%= message %></div>
        <% end %>

        <%= form.label :photo, 'Photo (URL)', :class => 'form-label' %>

            <%= form.text_field :photo, :class => 'form-text', placeholder: 'URL here...', %>
            <% user.errors.messages[:photo].each do |message| %>
                <div class='error-sm'><%= message %></div>
                <% end %>


                <%= form.label :cover_image, 'cover Image (URL)', :class => 'form-label' %>
                <%= form.text_field :cover_image, :class => 'form-text', placeholder: 'URL here...', %>
                <% user.errors.messages[:cover_Image].each do |message| %>
                    <div class='error-sm'><%= message %></div>
                    <% end %>

                    <div class='avtions mt-4 justify-contnt-between d-flex'>
                    <%= form.submit 'update Account', :class => 'form-btn' %>
                    <%= link_to 'Delete user', @user, method: :delete, data: {confirm 'you sure you wanna do this?'}, :class => 'form-btn' %>

                        <% end %>